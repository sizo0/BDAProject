<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="500.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
          <Tab text="Input">
               <content>
                  <BorderPane prefHeight="200.0" prefWidth="200.0">
                     <center>
                        <SplitPane dividerPositions="0.5" orientation="VERTICAL" BorderPane.alignment="CENTER">
                          <items>
                              <BorderPane>
                                 <center>
                                    <FlowPane hgap="10.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" vgap="10.0" BorderPane.alignment="CENTER">
                                       <children>
                                          <TextField prefWidth="300.0" promptText="Your Query..." />
                                          <Button fx:id="executeQuery" mnemonicParsing="false" prefWidth="80.0" text="Execute" />
                                       </children>
                                       <padding>
                                          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                       </padding>
                                    </FlowPane>
                                 </center>
                              </BorderPane>
                              <BorderPane>
                                 <center>
                                    <SplitPane dividerPositions="0.5" BorderPane.alignment="CENTER">
                                       <items>
                                          <TextField promptText="Generated MySQL Query" />
                                          <TextField promptText="Generated MongoDB Query" />
                                       </items>
                                       <BorderPane.margin>
                                          <Insets />
                                       </BorderPane.margin>
                                    </SplitPane>
                                 </center>
                              </BorderPane>
                          </items>
                        </SplitPane>
                     </center>
                  </BorderPane>
               </content>
          </Tab>
          <Tab text="Output">
               <content>
                  <BorderPane prefHeight="200.0" prefWidth="200.0">
                     <center>
                        <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="200.0" prefWidth="160.0" BorderPane.alignment="CENTER">
                           <items>
                              <SplitPane dividerPositions="0.29797979797979796">
                                <items>
                                    <TableView fx:id="mysqlTable">
                  </TableView>
                                    <TableView fx:id="mongoTable">
                  </TableView>
                                </items>
                              </SplitPane>
                              <TableView fx:id="finalTable" prefHeight="200.0" prefWidth="200.0" />
                           </items>
                        </SplitPane>
                     </center>
                  </BorderPane>
               </content>
          </Tab>
        </tabs>
      </TabPane>
   </center>
</BorderPane>
